<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.Content">

    <FrameLayout
        android:id="@+id/content_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/activity_main_content_id_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9F000000"
            android:contentDescription="@string/backgroundimage"
            android:scaleType="centerCrop"
            android:tint="#66000000" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/activity_main_content_id_body"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="66dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/activity_main_content_id_body_attachment"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/menu_tools" />

            <TextView
                android:id="@+id/activity_main_content_id_body_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/activity_main_content_id_body_more"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/baseline_more_horiz_white_36dp" />

        <View
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#33FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_main_content_id_body_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:drawableStart="@drawable/place_resize"
                android:textColor="#B3FFFFFF" />

            <ImageView
                android:id="@+id/activity_main_content_id_body_dot"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:contentDescription="@string/dotimage"
                app:srcCompat="@drawable/baseline_adjust_white_36dp2" />

            <TextView
                android:id="@+id/activity_main_content_id_body_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:textColor="#B3FFFFFF" />

            <TextView
                android:id="@+id/activity_main_content_id_body_emotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:drawableStart="@drawable/faces_resize"
                android:textColor="#B3FFFFFF"
                android:visibility="visible" />

            <View
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/activity_main_content_id_body_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:drawableStart="@drawable/favorite_resize"
                android:textColor="#B3FFFFFF" />

            <TextView
                android:id="@+id/activity_main_content_id_body_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:drawableStart="@drawable/chat_bubble"
                android:textColor="#B3FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>