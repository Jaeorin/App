<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/mainFrag_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/hashFrag_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/writeFrag_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/alarmFrag_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/profileFrag_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/menuCommonFrag_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/storyFrag_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/header_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/headerMenu_activity"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/baseline_menu_white_36dp"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/headerCancle_activity"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/baseline_close_white_36dp"
                        android:visibility="invisible" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="98"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/headerName_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/eround"
                        android:textColor="#B3FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>

                <Button
                    android:id="@+id/headerMore_activity"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/baseline_more_verti_white_36dp"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hashHeader_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/hashHeaderSearch_activity"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:autofillHints=""
                    android:hint="@string/hashHeaderSearch_activity"
                    android:inputType=""
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/alarmHeader_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="98"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/alarmHeaderName_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/alarmHeaderName_activity"
                        android:textColor="#B3FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>

                <Button
                    android:id="@+id/alarmHeaderMore_activity"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/baseline_more_verti_white_36dp"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/writeHeader_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/writeHeaderCancle"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/baseline_close_white_36dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="98"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/writeHeaderEmotion"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/baseline_tag_faces_white_36dp"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/writeHeaderBackground"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/baseline_more_verti_white_36dp"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/writeHeaderLocation"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/baseline_place_white_36dp"
                        style="?android:attr/borderlessButtonStyle" />
                </LinearLayout>

                <TextView
                    android:id="@+id/writeHeaderSave"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="@string/writeHeaderSave"
                    android:textColor="#B3FFFFFF" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/footer_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/locationButton_activity"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@drawable/baseline_place_white_36dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/compassButton_activity"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@drawable/baseline_gps_fixed_white_36dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/writeButton_activity"
                        android:layout_width="48dip"
                        android:layout_height="48dip"
                        android:layout_gravity="center"
                        android:background="@drawable/baseline_create_white_48dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/alarmButton_activity"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@drawable/baseline_notifications_none_white_36dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/profileButton_activity"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@drawable/baseline_person_outline_white_36dp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/writeFooter_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#000000"
                android:baselineAligned="false"
                android:orientation="horizontal"
                tools:visibility="invisible">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/baseline_person_white_36dp"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/baseline_chat_bubble_white_36dp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/baseline_notifications_white_36dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/baseline_more_horiz_white_36dp" />
            </LinearLayout>

        </FrameLayout>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/left_drawer_activity"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#000000"
        android:orientation="vertical">

        <ExpandableListView
            android:id="@+id/expandableListView_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>