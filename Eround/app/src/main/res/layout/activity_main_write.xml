<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/writeContainer"
    tools:context=".Main.Write">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/activity_main_write_id_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_main_write_id_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9F000000"
                android:contentDescription="@string/backgroundimage"
                android:scaleType="centerCrop"
                android:tint="#66000000" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/activity_main_write_id_content"
                android:layout_width="match_parent"
                android:layout_height="464dp"
                android:layout_marginTop="66dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/activity_main_write_id_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="text"
                    android:background="@null">

                    <requestFocus />
                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_main_write_id_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"
                        android:drawableStart="@drawable/place_resize"
                        android:textColor="#B3FFFFFF" />

                </LinearLayout>

                <View
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#33FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v4.widget.DrawerLayout>